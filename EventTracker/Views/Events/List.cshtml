@model List<EventTracker.Models.EventModel>

<h2>Event List</h2>

<a href="@Url.Action("Create")" class="btn btn-success mb-3">Add New Event</a>

<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Description</th>
        <th>Date</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var eventItem in Model)
    {
    <tr>
        <td>@eventItem.Id</td>
        <td>@eventItem.Title</td>
        <td>@eventItem.Description</td>
        <td>@eventItem.Date.ToShortDateString()</td>
        <td>
            <a href="@Url.Action("Details", new { id = eventItem.Id })" class="btn btn-primary">Details</a>
            <a href="@Url.Action("Delete", new { id = eventItem.Id })" class="btn btn-danger">Delete</a>
        </td>
    </tr>
    }
    </tbody>
</table>
